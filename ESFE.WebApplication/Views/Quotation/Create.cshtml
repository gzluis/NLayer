@model ESFE.BusinessLogic.DTOs.CreateQuotationRequest

@{
    ViewData["Title"] = "Crear Cotización";
}

<h1>Crear</h1>

<h4>Cotización</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-3">
            <label asp-for="ClientName" class="control-label">Nombre del Cliente</label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
            <label asp-for="ClientPhone" class="control-label">Teléfono del Cliente</label>
            <input asp-for="ClientPhone" class="form-control" />
            <span asp-validation-for="ClientPhone" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="SellerName" class="control-label">Nombre del Vendedor</label>
            <input asp-for="SellerName" class="form-control" />
            <span asp-validation-for="SellerName" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
            <label asp-for="PaymentMethodName" class="control-label">Método de Pago</label>
            <input asp-for="PaymentMethodName" class="form-control" />
            <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
            <label asp-for="QuotationNumber" class="control-label">Número de Cotización</label>
            <input asp-for="QuotationNumber" class="form-control" />
            <span asp-validation-for="QuotationNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
            <label asp-for="ValidityDays" class="control-label">Días de Validez</label>
            <input asp-for="ValidityDays" class="form-control" />
            <span asp-validation-for="ValidityDays" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
            <label asp-for="QuotationRegistration" class="control-label">Fecha de Registro</label>
            <input asp-for="QuotationRegistration" type="date" class="form-control" />
            <span asp-validation-for="QuotationRegistration" class="text-danger"></span>
        </div>      
        <div class="form-group form-check col-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="QuotationStatus" />Estado de la Cotización
            </label>
        </div>
    </div>
    <fieldset class="mt-3" id="detQuotation">
        <legend>Detalle de la Cotización</legend>
        <div class="row">
            <div class="form-group col-6">
                <label class="control-label">Productos</label>
                <select class="form-control" name="ProductId" id="slIdProducto" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group col-3">
                <label class="control-label">Cantidad</label>
                <input type="number" id="txtQuantity" name="Quantity" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label">Descuento</label>
                <div class="input-group">
                    <input type="number" id="txtDiscount" name="Discount" class="form-control" />
                    <div class="input-group-append">
                        <button class="btn btn-success" type="button" onclick="addItemDet()">Agregar</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="divDet">
            <partial name="_QuotationDetail" model="Model.QuotationDetails" />
        </div>       
    </fieldset>
      
    <div class="row">
        <div class="form-group mt-3">
            <input type="submit" value="Crear" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#slIdProducto').select2();
        });
        function addItemDet() {
            $.ajax({
                url: '@Url.Action("AddItemDet")',
                type:'POST',
                data: $("#detQuotation *[name]").serialize(),
                success: function (html) {                   
                    $("#divDet").html(html);
                }
            });
        }
    </script>
}
